{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",   // Om du sitter på TS <5: byt till "Node"
    "jsx": "react-jsx",              // Viktigt för nya JSX-transformen
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src", "vite.config.ts", "env.d.ts", "src/vite-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
